<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mp-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Add catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Title shold be valid</div>
      </div>
      <div class="mp-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          name="listing[description]"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a shot description</div>
      </div>
      <div class="mp-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mp-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="120000"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price shold be valid</div>
        </div>

        <div class="map-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name shold be valid</div>
        </div>
      </div>

      <div class="map-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Maharastra ,Jaipure,Patna"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">location shold be valid</div>
      </div>

      <button class="btn btn-dark add-btn mt-3">add</button>
    </form>
  </div>
</div>
